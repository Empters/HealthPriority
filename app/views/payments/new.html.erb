<div class="container margin-top">
  <div class="path">
    <%= render_breadcrumbs :separator => ' / ' %>
  </div>

  <div class="form-container active">
    <%= form_for(@payment) do |f| %>

        <div class='form-horizontal well'>
          <fieldset>
            <legend>Personal details</legend>
            <div class="control-group">
              <label class="control-label">Name</label>

              <div class="controls">
                <%= f.text_field :name %>
              </div>
            </div>
          </fieldset>
        </div>

        <div class='form-horizontal well'>
          <fieldset>
            <legend>Address</legend>

            <div class="control-group">
              <label class="control-label">State</label>

              <div class="controls">
                <%= f.text_field :state %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">City</label>

              <div class="controls">
                <%= f.text_field :city %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Post code</label>

              <div class="controls">
                <%= f.text_field :postal_code %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Address</label>

              <div class="controls">
                <%= f.text_field :address %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">E-mail</label>

              <div class="controls">
                <%= f.text_field :email %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Phone</label>

              <div class="controls">
                <%= f.text_field :phone %>
              </div>
            </div>

          </fieldset>
        </div>

        <div class='form-horizontal well'>
          <fieldset>
            <legend>Company</legend>
            <div class="control-group">
              <label class="control-label">Company name</label>

              <div class="controls">
                <%= f.text_field :company %>
              </div>
            </div>
          </fieldset>
        </div>

        <div class='form-horizontal well'>
          <fieldset>
            <legend>Additional information</legend>
            <div class="control-group">
              <label class="control-label">Description</label>

              <div class="controls">
                <%= f.text_area :description %>
              </div>
            </div>
          </fieldset>
        </div>

        <div class="row">
          <div class="col-md-12 buttons-container">
            <input name="Submit" type="submit" value="Execute Payment" class="button green right submit-button">
            <%= link_to 'Shopping cart', shopping_carts_path, html_options = {class: 'button green right continue-shopping'} %>
          </div>
        </div>

    <% end %>
  </div>

</div>
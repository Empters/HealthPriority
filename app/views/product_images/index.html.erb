<h1>Listing product_images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_images.each do |product_image| %>
      <tr>
        <td><%= link_to t('show'), product_image %></td>
        <td><%= link_to t('edit'), edit_product_image_path(product_image) %></td>
        <td><%= link_to t('destroy'), product_image, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_product_image'), new_product_image_path %>

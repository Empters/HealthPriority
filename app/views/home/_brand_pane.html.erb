<div class="title-banner">
  SHOP BY BRAND
</div>
<div class="content-container categories-container">
  <ul class="categories-list">
    <% @brands.each do |brand| %>
        <li>
          <%= link_to format('%{brand} (%{brand_count})', {:brand => brand.name, :brand_count => brand.products.length}), brand_path(brand), remote: true %>
        </li>
    <% end %>
  </ul>
</div>
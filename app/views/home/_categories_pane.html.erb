<div class="title-banner">
  OUR CATEGORIES
</div>
<div class="content-container">
  <ul class="categories-list">
    <% @categories.each do |category| %>
        <li>
          <a href="#"><%= category.name %></a><div class="category-arrow" data-category="<%= category.name %>"></div>
        </li>
        <% category.children.each do |child_category| %>
            <li class="sub-category hidden" data-category="<%= category.name %>">
              <a href="#"><%= child_category.name %></a>
            </li>
        <% end %>
    <% end %>
  </ul>
</div>

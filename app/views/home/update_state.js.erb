var states_select = $("#states_select");
if (states_select) {
    states_select.empty();
    states_select.append($('<option>', { text: "<%= "* #{t('state')}" %>" }));
    <% if !@states.empty? %>
    states_select.append("<%= escape_javascript(options_for_select(@states.collect { |p| [p.name, p.id] })) %>");
    <% end %>
}
<div class="container">
  <div>
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_for(@user) do |f| %>
            <div class="modal-body">
              <div class="inputs">
                <div>
                  <%= f.label t('email') %>
                  <br/>
                  <%= @user.email %>
                </div>
                <br/>
                <div>
                  <%= f.label t('title') %>
                  <br/>
                  <%= @user.title %>
                </div>
                <br/>
                <div>
                  <%= f.label t('first_name') %>
                  <br/>
                  <%= @user.first_name %>
                </div>
                <br/>
                <div>
                  <%= f.label t('last_name') %>
                  <br/>
                  <%= @user.last_name %>
                </div>
                <br/>
                <div>
                  <%= f.label t('last_name') %>
                  <br/>
                  <%= @user.last_name %>
                </div>
              </div>
              <div class="inputs">
                <br/>
                <div>
                  <%= f.label t('country') %>
                  <br/>
                  <%= @user.country %>
                </div>
                <br/>
                <div>
                  <%= f.label t('address') %>
                  <br/>
                  <%= @user.address %>
                </div>
                <br/>
              </div>
              <div class="inputs">
                <div class="modal-footer">
                  <%= link_to t('edit'), edit_user_path(@user),  :class => 'btn btn-primary button gray' %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
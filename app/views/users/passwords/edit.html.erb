<div class="container-background">
  <div class="container main-content main-content-transparent">

    <div class="path">
      <%= render_breadcrumbs :separator => ' / ' %>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= devise_error_messages! %>

        <%= f.hidden_field :reset_password_token %>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'checkout-input', placeholder: 'New password' %>
          </div>

          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: 'off', class: 'checkout-input', placeholder: 'Confirm new password' %>
          </div>

          <div class="col-md-6 col-md-offset-3 text-center">
            <%= f.submit 'Change my password', class: 'button green submit-button' %>
          </div>
        </div>

    <% end %>

    <%= render 'users/shared/links' %>

  </div>
</div>
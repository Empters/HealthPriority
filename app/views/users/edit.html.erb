<div class="container-background">
  <div class="container main-content main-content-transparent">

    <div class="path">
      <%= render_breadcrumbs :separator => ' / ' %>
    </div>

    <div class="page-title">
      <%= 'Edit account' %>
    </div>

    <%= form_for(@user) do |f| %>

        <%= f.error_messages %>

        <div class="row">
          <div class="col-md-6 col-xs-12">

            <div class="cart-title">
              Person details
            </div>

            <%= f.select :gender_id, Gender.all.collect { |p| [p.name, p.id] }, {:prompt => '* Gender'}, {class: 'checkout-input'} %>
            <%= f.text_field :first_name, class: 'checkout-input', placeholder: '* First Name' %>
            <%= f.text_field :last_name, class: 'checkout-input', placeholder: '* Last Name' %>
            <%= f.phone_field :phone, class: 'checkout-input', placeholder: "* #{t('phone')}" %>
            <%= f.phone_field :fax, class: 'checkout-input', placeholder: 'Fax' %>

          </div>

          <div class="col-md-6 col-xs-12">

            <div class="cart-title">
              Address
            </div>

            <%= f.select :country_id, Country.all.collect { |p| [p.name, p.id] }, {:include_blank => "* #{t('country')}"}, {id: 'countries_select', class: 'checkout-input'} %>
            <%= f.select :state_id, State.where(country_id: resource.country_id).collect { |p| [p.name, p.id] }, {:include_blank => "* #{t('state')}"}, {id: 'states_select', class: 'checkout-input'} %>
            <%= f.text_field :city, class: 'checkout-input', placeholder: "* #{t('city')}" %>
            <%= f.text_field :postal_code, class: 'checkout-input', placeholder: "* #{t('postal_code')}" %>
            <%= f.text_field :address, class: 'checkout-input', placeholder: '* Address 1' %>
            <%= f.text_field :second_address, class: 'checkout-input', placeholder: 'Address 2' %>

          </div>
        </div>

        <div class="row">
          <div class="col-md-12 buttons-container">
            <%= f.submit t('save'), :class => 'button green right submit-button' %>
          </div>
        </div>
    <% end %>

  </div>
</div>
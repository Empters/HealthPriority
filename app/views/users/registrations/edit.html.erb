<div class="container-background">
  <div class="container main-content main-content-transparent">

    <div class="path">
      <%= render_breadcrumbs :separator => ' / ' %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>

        <%= devise_error_messages! %>

        <div class="row">

          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :current_password, autofocus: true, autocomplete: 'off', class: 'checkout-input', placeholder: t('current_password') %>
          </div>

          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :password, autocomplete: 'off', class: 'checkout-input', placeholder: "* #{t('new_password')}" %>
          </div>

          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'checkout-input', placeholder: "* #{t('confirm_new_password')}" %>
          </div>

          <div class="col-md-6 col-md-offset-3 text-center">
            <%= f.submit t('change_password'), class: 'button green submit-button' %>
          </div>

        </div>

    <% end %>

  </div>
</div>
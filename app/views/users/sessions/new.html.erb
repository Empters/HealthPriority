<div class="container-background">
  <div class="container main-content main-content-transparent">

    <div class="path">
      <%= render_breadcrumbs :separator => ' / ' %>
    </div>

    <div class="page-title">
      <%= t('login') %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">

          <%= f.error_messages %>

          <div class="col-md-6 col-md-offset-3">
            <%= f.email_field :email, autofocus: true, class: 'checkout-input', placeholder: t('email') %>
          </div>
          <div class="col-md-6 col-md-offset-3">
            <%= f.password_field :password, autocomplete: 'off', class: 'checkout-input', placeholder: t('password') %>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class="col-md-6 col-md-offset-3">
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
          <% end -%>
          <div class="col-md-6 col-md-offset-3 text-center">
            <%= f.submit t('login'), class: 'button green submit-button' %>
          </div>
        </div>
    <% end %>
    <%= render 'users/shared/links' %>
  </div>
</div>
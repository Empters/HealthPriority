<!-- Top bar -->
<div class="top-bar-wrapper">
  <div class="container">
    <div class="top-bar-container left">
      <div class="top-bar-text phone">
        For more information 0883 412 071
      </div>
    </div>
    <div class="top-bar-container right">
      <div class="top-bar-tab first-tab top-bar-text">
        FAQ
      </div>
      <div class="top-bar-tab top-bar-text">
        DELIVERY
      </div>
      <div class="top-bar-tab top-bar-text">
        <% if user_signed_in? -%>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
            <%= link_to "Sign In", new_user_session_path, remote: true, :"data-toggle" => 'modal', :"data-target" => '#signInModal' %>
        <% end %>
      </div>
      <div class="top-bar-tab top-bar-text">
        <div class="fb_top" style='background-image: url("<%= image_path "fb-header.png" %>");'></div>
        Connect
      </div>
    </div>
  </div>
</div>
<!-- Top bar end -->

<!-- Search Section -->
<div class="search-section-container">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= link_to '', root_path, :class => 'logo', :data => { :no_turbolink => true } %>
      </div>
      <div class="col-md-8">
        <div class="search-section">
            <div class="search-container">
                <div class="search-dropdown-container left">
                    <div class="dropdown-toggle" id="search_category" data-toggle="dropdown">
                        <span id="chosen_category">All Categories</span>
                        <b class="caret"></b>
                    </div>
                    <ul aria-labelledby="search_category" role="menu" class="dropdown-menu ">
                        <li>
                            All Categories
                        </li>
                        <li>
                            Category 1
                        </li>
                        <li>
                            Category 2
                        </li>
                        <li>
                            Category 3
                        </li>
                    </ul>
                </div>
                <div class="search-input-container left">
                  <input type="text" class="search-input" placeholder="Search in our products..." />
                </div>
                <div class="search-image right"></div>
            </div>
        </div>
      </div>
      <div class="col-md-2">
        <div class="cart-info-section">
          <div class="cart-amount">3</div>
          <%= link_to '', shopping_cards_path, :class => 'cart' %>
          <div class="total-price">
            <div class="total">total:</div>
            <div class="price">$112</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Search Section End -->

<!-- Main Navigation -->
<div class="main-nav-wrapper">
  <div class="container text-center">
    <div class="main-nav-tab">
      <%= link_to 'HOME', root_path, :data => { :no_turbolink => true }, :class => 'top-bar-text' %>
    </div>
    <div class="main-nav-tab">
      <%= link_to 'ABOUT US', about_us_path, :class => 'top-bar-text' %>
    </div>
    <div class="main-nav-tab">
      <%= link_to 'PRODUCTS', products_path, :class => 'top-bar-text' %>
    </div>
    <div class="main-nav-tab">
      <%= link_to 'SPECIAL OFFERS', special_offers_path, :class => 'top-bar-text' %>
    </div>
    <div class="main-nav-tab">
      <%= link_to 'ONLY ORGANIC', only_organics_path, :class => 'top-bar-text' %>
    </div>
    <div class="main-nav-tab">
      <%= link_to 'CONTACTS', contacts_path, :class => 'top-bar-text' %>
    </div>
  </div>
</div>
<!-- Main Navigation End -->




<%= yield %>





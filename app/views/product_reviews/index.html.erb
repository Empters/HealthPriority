<h1>Listing product_reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_reviews.each do |product_review| %>
      <tr>
        <td><%= link_to t('show'), product_review %></td>
        <td><%= link_to t('edit'), edit_product_review_path(product_review) %></td>
        <td><%= link_to t('destroy'), product_review, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_product_review'), new_product_review_path %>

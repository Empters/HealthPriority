<% if (!orders.blank?) %>

    <div class="container-background">
      <div class="container main-content">

        <div class="path">
          <%= render_breadcrumbs :separator => ' / ' %>
        </div>

        <div class="page-title">
          <%= page_title %>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="product-content-table-item">
              <div class="col-md-1 content-table-td title"><%= t('payment_ident_number') %></div>
              <div class="col-md-2 content-table-td title"><%= t('create_date') %></div>
              <div class="col-md-4 content-table-td title"><%= t('payment_products') %></div>
              <div class="col-md-2 content-table-td title"><%= t('payment_status') %></div>
              <div class="col-md-1 content-table-td title"><%= t('quantity') %></div>
              <div class="col-md-2 content-table-td title"><%= t('total') %></div>
            </div>
          </div>
        </div>

        <% orders.each do |order| %>

            <div class="row">
              <div class="col-md-12">
                <div class="product-content-table-item">
                  <div class="col-md-1 content-table-td"><%= order.id %></div>
                  <div class="col-md-2 content-table-td"><%= I18n.l order.created_at %></div>
                  <div class="col-md-4 content-table-td"><%= order.item_name %></div>
                  <div class="col-md-2 content-table-td"><%= order.status %></div>
                  <div class="col-md-1 content-table-td"><%= order.quantity %></div>
                  <div class="col-md-2 content-table-td"><%= format('Â£ %.2f', order.amount) %></div>
                </div>
              </div>
            </div>

        <% end %>

      </div>
    </div>

<% end %>
<div class="title-banner">
  <%= @page_label %>
</div>

<% if (!@products.blank?) %>
    <div class="content-container">
      <!-- rows -->
      <% @products.in_groups_of(@products_per_row, false).each do |group| %>
          <div class="row nomargin">
            <% group.each do |product| %>
                <%= render partial: 'products/product', locals: {product: product, item_class: @table_css + ' item-container', is_small: 'small'} %>
            <% end %>
          </div>
      <% end %>

      <!-- rows -->
    </div>
    <div class="pager-wrapper">
      <div class="products-count left">
        <%= page_entries_info @products %>
      </div>
      <div class="flickr_pagination right">
        <%= will_paginate @products %>
      </div>
      <div class="clearfix"></div>
    </div>
<% else %>
    <%= t('products_not_found_message') %>
<% end %>
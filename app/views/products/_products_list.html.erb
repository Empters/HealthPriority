<div class="title-banner">
  OUR FEATURED PRODUCTS
</div>
<div class="content-container">
  <!-- rows -->
  <div class="row">
    <% $products.in_groups_of(3, false).each do |group| %>
        <% group.each do |product| %>
            <%= render partial: 'products/product', locals: {product: product, item_class: 'col-md-4 col-sm-6 col-xs-12'} %>
        <% end %>
    <% end %>
  </div>
  <!-- rows -->
</div>
<div class="pager-wrapper">
  <div class="products-count left">
    9 of 34 products
  </div>
  <div class="pager-container right">
    <div class="page active">
      1
    </div>
    <div class="page">
      2
    </div>
    <div class="page">
      3
    </div>
  </div>
  <div class="clearfix"></div>
</div>
<h1>Listing manufacturers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= link_to t('show'), manufacturer %></td>
        <td><%= link_to t('edit'), edit_manufacturer_path(manufacturer) %></td>
        <td><%= link_to t('destroy'), manufacturer, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_manufacturer'), new_manufacturer_path %>

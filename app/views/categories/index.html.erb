<div class="container-background">
  <div class="container main-content">
    <div class="row">

      <div class="col-md-3 hidden-xs">
        <%= render 'home/categories_pane', is_ajax: true %>
      </div>

      <div class="col-md-9 col-xs-12">
        <div class="title-banner">
          <%= t("our_categories") %>
        </div>
        <div class="content-container">
          <% @categories.in_groups_of(3, false).each do |group| %>
              <div class="row">
                <% group.each do |category| %>
                    <%= render partial: 'categories/category', locals: {category: category, item_class: 'col-md-4 col-sm-4 col-xs-12'} %>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
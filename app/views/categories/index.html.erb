<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @root_categories.each do |category| %>
      <tr>
        <td><%= link_to t('show'), category %></td>
        <td><%= link_to t('edit'), edit_category_path(category) %></td>
        <td><%= link_to t('destroy'), category, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_category'), new_category_path %>

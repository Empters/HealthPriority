<h1>Listing product_discounts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_discounts.each do |product_discount| %>
      <tr>
        <td><%= link_to t('show'), product_discount %></td>
        <td><%= link_to t('edit'), edit_product_discount_path(product_discount) %></td>
        <td><%= link_to t('destroy'), product_discount, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product discount', new_product_discount_path %>

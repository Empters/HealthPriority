<h1>Listing product_discounts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_discounts.each do |product_discount| %>
      <tr>
        <td><%= link_to 'Show', product_discount %></td>
        <td><%= link_to 'Edit', edit_product_discount_path(product_discount) %></td>
        <td><%= link_to 'Destroy', product_discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


/* Generic styles */
body {
	padding: 0px;
	margin: 0px;
}

.nopadding {
	padding: 0;
}

.nomargin {
	margin: 0;
}

.left {
	float: left;
}

.right {
	float: right;
}

.button {
	clear: both;
	padding: 10px 20px;
	color: #FFFFFF;
}

.button.green {
	background: green;
}

.button:hover {
	cursor: pointer;
}

.button.green:hover {

	background: orange;
}

.button.orange {

}

/* Generic styles End */

.top-bar-wrapper {
	position: relative;
	background: orange;
}

.top-bar-container {
	font-size: 0px;
	letter-spacing: 0px;
	word-spacing: 0px;
}

.top-bar-text {
	padding: 10px 0px;
	font-size: 16px;
	font-weight: bolder;
}

.top-bar-tab {
	display: inline-block;
	padding-left: 10px;
	padding-right: 10px;
	border-right: solid #FFFFFF 1px;
}

.top-bar-tab.first {
	border-left: solid #FFFFFF 1px;
}

.top-bar-tab:hover {
	background: green;
	cursor: pointer;
}

.main-nav-wrapper {
	background: green;
}

.main-nav-tab {
	display: inline-block;
	padding: 10px;
	color: white;
}

.main-nav-tab:hover {
	background: blue;
	cursor: pointer;
}

.title-banner {
	text-transform: uppercase;
	padding: 10px;
	color: white;
	background: green;
}

.content-container {
	padding: 20px 0px;
	border: solid black 1px;
}

.item-container {
	margin: 10px;
	padding: 0px 20px;
	border-right: solid black 1px;
}

.item-container.last {
	border: none;
}

.item-image {
	display: block;
	height: 100px;
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
}

.item-title {

}

.item-price {

}

.pager-wrapper {
	border-right: solid black 1px;
	border-bottom: solid black 1px;
	border-left: solid black 1px;
}

.page {
	display: inline-block;
	background: green;
}

.page.actve, .page:hover {
	cursor: pointer;
	background: orange;
}

.products-count, .page {
	padding: 5px 10px;
}

.category-name {
	text-decoration: uppercase;
}

.category-item {
	
}

.footer {
	padding: 50px;
	background: green;
}

